<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".AddRecipeActivity">

    <EditText
        android:id="@+id/edit_text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/recipeTitle"
        android:inputType="text"/>

    <EditText
        android:id="@+id/edit_text_portions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/portions_number"
        android:inputType="number"/>

    <EditText
        android:id="@+id/edit_text_ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/ingredients"
        android:inputType="textMultiLine"/>

    <EditText
        android:id="@+id/edit_text_preparationInstructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/prepInstructions"
        android:inputType="textMultiLine"/>

</LinearLayout>